<section class="container mx-auto py-5">
  <div class="grid gap-5 md:justify-between grid-cols-12">
    <div class="md:col-span-9 col-span-12 shadow-lg px-4 py-5">
      <div class="container px-5 py-5 mx-auto">
        <div class="md:col-span-9 col-span-12 shadow-lg px-4 py-5">
          <div class="container px-5 py-2 mx-auto">
            <h1 class="capitalize text-2xl mb-3 font-semibold text-indigo-400">
              Followers Post (<%= followerpost.length %> )
            </h1>
            <hr />
            <div class="flex overflow-x-auto w-full">
              <% if(followerpost.length>0){
                followerpost.forEach(function(data){%>




<div class="card_post mr-3">
  <div class="
      h-full
      w-56
      border-2 border-gray-200 border-opacity-60
      rounded-lg
      overflow-hidden
    ">
    <% if(data.img){ %>
      <img class="lg:h-48 md:h-36 w-full object-cover object-center" src="/assets/upload/<%= data.img %>" alt="blog" />
      <%}%>
        <div class="p-6">
        <h2 class="
          tracking-widest
          text-xs
          title-font
          font-medium
          text-gray-400
          mb-1
        ">
            <%= data.category_name %>
          </h2>
          <h1 class="title-font text-lg font-medium text-gray-900 mb-3">
            <%= data.title %>
          </h1>
          <p class="leading-relaxed mb-3">
            <%= excerpt(data.description) %>
          </p>
          <div class="flex justify-between items-center flex-wrap">
            <div class="post_info">
              <span class="
              text-gray-400
              mr-3
              inline-flex
              items-center
              lg:ml-auto
              md:ml-0
              ml-auto
              leading-none
              text-sm
              pr-3
              py-1
              border-r-2 border-gray-200
            ">
                <svg class="w-4 h-4 mr-1" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round"
                  stroke-linejoin="round" viewBox="0 0 24 24">
                  <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                  <circle cx="12" cy="12" r="3"></circle>
                </svg>
                <%= data.view %>
              </span>
              <a href="/profile/like/<%= data.id %> "
                class="text-gray-400 inline-flex items-center leading-none text-sm">
                <svg xmlns="http://www.w3.org/2000/svg" class="
                w-4
                h-4
                mr-1
                <%=
                like_check(data.likestatus,user.id)
                ?
                'text-red-500':''
                %>
              " fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5" />
                </svg>
                <%= data.likecount %>
              </a>
            </div>
            <a class="
            text-indigo-500
            inline-flex
            items-center
            md:mb-2
            lg:mb-0
            capitalize
          " href="/post/<%= data.id %>">read
              <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none"
                stroke-linecap="round" stroke-linejoin="round">
                <path d="M5 12h14"></path>
                <path d="M12 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
  </div>
</div>






                <%})}else{%>
                  <%- include('./partial/error') %>
                    <%}%>
            </div>
          </div>
      </div>
        <div class="mt-10 mb-2 p-3 rounded-md shadow-md">
          <h1 class="capitalize text-2xl mb-3 font-semibold text-indigo-400">
            Most Recent
          </h1>
          <div class="grid lg:grid-cols-3 md:grid-cols-2 grid-cols-1 gap-4">
            <% if(recent.length>0){
              recent.forEach(function(res){%>
              <%- include('./partial/card',{data:res}) %>
                <%})}else{%>
                  <%- include('./partial/error') %>
                    <%}%>

          </div>
        </div>
        <br />
        <hr />
        <br />
        <div class="mt-10 mb-2 p-3 rounded-md shadow-md">
          <h1 class="capitalize text-2xl mb-3 font-semibold text-indigo-400">
            people you may know
          </h1>
          <% if(people.length>0){%>
            <div class="owl-carousel shadow-md p-3">
              <%people.forEach(function(res){ %>
                <%- include('./partial/profile.ejs',{data:res}) %>
                  <%})%>
            </div>
            <%}else{%>
              <%- include('./partial/error') %>
            <%}%>

        </div>
      </div>
    </div>

    <div class="md:col-span-3 col-span-12 shadow-md px-4 py-5">
      <div class="type">
        <h1 class="text-2xl text-indigo-500 pb-5 font-bold">Type</h1>
        <ul class="w-full">
          <% category.forEach(function(data){ %>
            <li class="mb-2 pb-3 border-b-2 border-indigo-100 text-xl capitalize">
              <a href="/category/<%= data.id %> ">
                <%= data.category_name %>
                  <span class="
                  float-right
                  rounded-md
                  bg-indigo-500
                  text-white
                  py-1
                  px-2
                ">
                    <%= data.categoryCount %>
                  </span>
              </a>
            </li>
            <%})%>
        </ul>
      </div>
      <div class="p-4">
        <h1 class="text-2xl text-indigo-500 pb-5 pt-5 font-bold">
          Most Followed
        </h1>
        <% if(popularPeople.length >0){ %> 
        <div class="owl-carousel most_popular">
          <% popularPeople.forEach(function(data){ %>
            <%- include('./partial/profile.ejs',{data:data}) %>
          <%})%>
        </div>
        <%}else{%>
          <%- include('./partial/error') %> 
          <%}%>
      </div>
    </div>
  </div>
</section>
<section class="post_popular_post container mx-auto py-5 px-4 shadow-lg rounded-md">
  <h1 class="text-2xl text-indigo-500 pb-5 pt-5 font-bold">Most Popular</h1>
  <div class="grid lg:grid-cols-4 md:grid-cols-2 grid-cols-1 gap-4">
    <% if(popular.length>0){
      popular.forEach(function(res){%>
      <%- include('./partial/card',{data:res}) %>
        <%})}else{%>
          <%- include('./partial/error') %>
      <% } %>
  </div>
  <div class="flex justify-center">
    <%- include('./partial/pagination',pagination) %>
  </div>
</section>
