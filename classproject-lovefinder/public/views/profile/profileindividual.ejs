<section class="profile_info relative w-full">
  <div
    class="
      absolute
      bg-white
      bottom-4
      right-2
      cursor-pointer
      rounded
      shadow-sm
      border-dotted-1 border-indigo-400
      text-center
      px-3
      py-2
    "
  >
    
  </div>
  <div class="cover h-64 rounded-b-lg overflow-hidden bg-fixed">
    <% if(userInfo && userInfo.cover){ %> 
              <img
                src="./assets/upload/<%= userInfo.cover %> "
                alt=""
                class="w-full h-full object-cover cursor-pointer"
                srcset=""
              />
              <% }else{ %> 
                <img
                  src="https://ui-avatars.com/api/?name=<%= userInfo.name %> &color=7F9CF5&background=EBF4FF"
                  alt=""
                  class="w-full h-full object-cover cursor-pointer"
                  srcset=""
                />
                <%}%>
  </div>
  <div class="flex items-center flex-col justify-start">
    <div
      class="
        shadow-md
        rounded-md
        bg-white
        flex
        absolute
        -bottom-16
        z-50
        mx-auto
        w-80
        px-12
        py-5
        flex 
        flex-col
        items-center
        "
        >
          <div class="relative">
          <% if(userInfo && userInfo.avatar){ %> 
            <img
            src="/assets/upload/<%= userInfo.avatar %> "
            alt=""
            class="rounded-full w-24 h-24 cursor-pointer"
            srcset=""
            />
            <% }else{ %> 
              <img
              src="https://ui-avatars.com/api/?name=<%= userInfo.name %> &color=7F9CF5&background=EBF4FF"
              alt=""
              class="rounded-full w-24 h-24 cursor-pointer"
              srcset=""
              />
              <%}%>
            </div>
      <% if(userInfo && userInfo.name){ %>     
        <h1 class="text-2xl text-indigo-400"><%= userInfo.name %> </h1>
      <%}%>
      <address class="flex flex-col justify-center mt-4 text-center">
        <a href="tel:<%= userInfo.phone %>" class="text-md mb-1 capitalize"><%= userInfo.phone?userInfo.phone:"not found" %></a>
        <a href="mail:<%= userInfo.email %>" class="text-md mb-1"
          ><%= userInfo.email %></a
        >
          <a href="/profile/follow/<%= userInfo.id %> " class="
                            transition
                            ease-in
                            duration-300
                            block
                            items-center
                            text-sm
                            font-medium
                            mb-2
                            md:mb-0
                            bg-purple-500
                            px-5
                            py-2
                            hover:shadow-lg
                            tracking-wider
                            text-white
                            rounded-full
                            hover:bg-purple-600
                          ">
                          <span><%= (followstatus.length > 0 && followstatus[0].followstatus===1)?"Unfollow Now":"Follow Now"%></span>
                        </a>
          <div class="follow flex justify-between bg-indigo-500 px-3 py-2 mt-4 rounded-md text-white">
              <h1 class="mr-3">Follower:<span class="ml-1 rounded-md p-1 bg-white text-black"><%=  follower.length > 0 ? follower[0].follower :0 %> </span></h1>
              <h1 class="mr-3">Following:<span class="ml-1 rounded-md p-1 bg-white text-black"><%= following.length > 0 ? following[0].following :0 %> </span></h1>
            </div>
      </address>
    </div>
  </div>
</section>

<section
  class="post_popular_post container mx-auto py-5 px-4 shadow-lg rounded-md"
>
  <h1 class="text-2xl text-indigo-500 pb-5 pt-5 font-bold">My Posts</h1>
  <% if(post.length > 0){ %> 
  <div class="grid lg:grid-cols-3 md:grid-cols-2 grid-cols-1 gap-4">
              <% post.forEach(function(res){%>
                <%- include('../partial/card',{data:res}) %> 
             <%})%>
        
            </div>
  <%}else{%>
      <h1 class="text-2xl text-indigo-500 pb-5 pt-5 font-bold text-center">Create New Post ðŸ˜‰ </h1>
  <%} %>
</section>
